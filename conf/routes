# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                     		walrath.technology.openwalrus.controllers.Application.index
GET		/login/:handle/:password	walrath.technology.openwalrus.controllers.Application.read(handle: String, password:String)
GET		/signup						walrath.technology.openwalrus.controllers.Application.signup
POST    /account/create             walrath.technology.openwalrus.controllers.Application.performSignup
GET     /:handle                    walrath.technology.openwalrus.controllers.Application.loadProfile(handle: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
